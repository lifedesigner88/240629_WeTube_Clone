extends base.pug

block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(
            name="title"
            placeholder="Title",
            required,
            type="text"
            minlength=8,
            maxlength=20,
        )
        input(
            name="description"
            placeholder="Description",
            required,
            type="text",
            minlength=10,
            maxlength=140,
        )
        input(
            name="hashtags"
            placeholder="Hashtags, separated by comma.",
            required,
            type="text"
        )
        input(
            type="submit",
            value="upload Video"
        )
