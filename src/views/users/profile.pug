extends ../base
include ../mixins/video

block content
    div.profile__data
        if loggedInUser.avatarUrl
            if loggedInUser.avatarUrl.includes("http")
                img(src=loggedInUser.avatarUrl, width="400", height="300").avartar
            else
                img(src="/" + loggedInUser.avatarUrl, width="400", height="300").avartar
        h3=user.name
    div.video__grid
        each video in user.videos
            +video(video)
        else
            span.empty__message No videos found
