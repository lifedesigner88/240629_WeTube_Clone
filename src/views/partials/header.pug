header
    a(href="/").header__logo
        i.fab.fa-youtube
    nav
        ul
            li
                a(href="/search")
                    i.fas.fa-search
            if loggedIn
                li
                    a(href="/logout") Logout
                li
                    a(href="/users/edit") Edit Profile
                li
                    a(href="/videos/upload") Upload Video
                li
                    a(href=`/users/${loggedInUser._id}`)
                        if loggedInUser.avatarUrl
                            if loggedInUser.avatarUrl.includes("http")
                                img(src=loggedInUser.avatarUrl, width="400", height="300").avartar__small
                            else
                                img(src="/" + loggedInUser.avatarUrl, width="400", height="300").avartar__small

            else
                li
                    a(href="/login").header__btn Login
                li
                    a(href="/join") Join

