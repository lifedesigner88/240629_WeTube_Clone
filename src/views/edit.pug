extends base


block content
    h4 Change title of video
    form(method="POST")
        input(
            name="title"
            value=video.title
            placeholder="Title",
            required,
            type="text"
            minlength=8,
            maxlength=20,
        )
        input(
            name="description"
            value=video.description
            placeholder="Description",
            required,
            type="text",
            minlength=10,
            maxlength=140,
        )
        input(
            name="hashtags"
            value=video.hashtags.join()
            placeholder="Hashtags, separated by comma.",
            required,
            type="text"
        )
        input(
            type="submit",
            value="upload Video"
        )
