extends base
include mixins/video

block content
    form(method="GET")
        input(
            name="keyword"
            placeholder="Search by title",
            type="text"
        )
        input(
            type="submit"
            value="Search Now"
        )
    div.video__grid
        each video in videos
            +video(video)
        else
            span.empty__message No videos found
