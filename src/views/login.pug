extends base

block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(
            name="username",
            type="text",
            placeholder="UserName",
            required
        )
        input(
            name="password",
            type="password",
            placeholder="Password",
            required
        )
        input(
            type="submit",
            value="Login"
        )
        br
        a(href="/users/github/start") Continue with Github &rarr;
    hr
    div
        span You don't have accout?&nbsp
        a(href="/join") Create one now &rarr;
